<div class="text-center">
  <h1>プロフィールの編集</h1>
</div>
 <div class="row">
   <div class="col-sm-6 offset-sm-3">
     <div class="icon">
      <% if @user.icon? %>
        <img src=<%= @user.icon %> class = "icon_image" alt ="icon" >
      <% else %>
        <%= image_tag "icon.png", class: "icon_image", alt: "icon" %>
      <% end %>
     </div>
   
   </div>
  </div> 

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
   
    <div class="icon_button">
      <%= f.file_field :icon %>
    </div>
    
      <div class="form-group">
        <%= f.label :name, '名前' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :email, 'Email' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :battle_app, '主な対戦アプリ' %>
        <%= f.text_field :battle_app, class: 'form-control', :placeholder => "例: 将棋ウォーズ,将棋倶楽部24,将棋クエスト等" %>
      </div>
      
      <div class="form-group">
        <%= f.label :kiryoku, '棋力' %>
        <%= f.text_field :kiryoku, class: 'form-control', :placeholder => "例: 2級,4段" %>
      </div>
      
       <div class="form-group">
        <%= f.label :profile, '自己紹介' %>
        <%= f.text_area :profile, class: 'form-control', :placeholder => "例: 居飛車党で相掛かりが得意戦法です。" %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, 'パスワード再確認' %>
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>

      <%= f.submit '更新', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>