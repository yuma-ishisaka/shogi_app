<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Shogi Strategy Designation</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      
        <% if logged_in? %>
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to 'マイページ', user_path(current_user), class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'ユーザー一覧', users_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'ログアウト', logout_path, method: :delete, class: 'nav-link' %></li>
          </ul>
    
        <% else %>
          <ul class="navbar-nav">
            <li class="nav-item"><%= link_to '新規登録', signup_path, class: 'nav-link' %></li>
            <li class="nav-item"><%= link_to 'ログイン', login_path, class: 'nav-link' %></li>
          </ul>
        <% end %>
          
    </div>
</header>